<h1>Listing landscapes</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Photo</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @landscapes.each do |landscape| %>
      <tr>
        <td><%= landscape.title %></td>
        <td><%= landscape.description %></td>
        <td><%= landscape.photo %></td>
        <td><%= link_to 'Show', [@trail, landscape] %></td>
        <td><%= link_to 'Edit', edit_trail_landscape_path(@trail, landscape) %></td>
        <td><%= link_to 'Destroy', [@trail, landscape], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Landscape', new_trail_landscape_path(@trail) %>

<br />

<%= link_to 'Back to Trail', @trail %>
